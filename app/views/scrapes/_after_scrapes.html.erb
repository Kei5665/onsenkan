<%= form_with model: form, url: scrapes_path, method: :post, local: true do |form| %>
  <table class="table">
    <thread>
      <tr>
        <th>
          <input type="checkbox" class="checkbox" />
        </th>
        <th>店名</th>
        <th>住所</th>
        <th>営業時間</th>
        <th>緯度</th>
        <th>経度</th>
      </tr>
    </thead>
    <tbody>
      <%= form.fields_for :shops do |f| %>
        <tr>
          <td>
            <div class="input-group input-group-dynamic">
              <%= f.text_field :name, class: 'form-control' %>
            </div>
          </td>
          <td>
            <div class="input-group input-group-dynamic">
              <%= f.text_field :address, class: 'form-control' %>
            </div>
          </td>
          <td>
            <div class="input-group input-group-dynamic">
              <%= f.text_field :opening_hours, class: 'form-control' %>
            </div>
          </td>
          <td>
            <div class="input-group input-group-dynamic">
              <%= f.number_field :latitude, class: 'input input-bordered input-primary' %>
            </div>
          </td>
          <td>
            <div class="input-group input-group-dynamic">
              <%= f.number_field :longitude, class: 'input input-bordered input-primary' %>
            </div>
          </td>
        </tr>
      <%end%>
    </tbody>
  </table>
<%= form.submit "一括登録", class: 'btn'%>
<%end%>